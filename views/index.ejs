<%- include('./partials/header') %>

  <div style="text-align: center;" class='row'>
    <div class='card text-white bg-primary mx-auto col'
      style='max-width: 50vw; margin-top: 20vh;'>
      <div class='card-body'>
        <% if(!quote) { %>
          <h2>Coming soon...</h2>
          <% } else if(!quote.author) { %>
            <h4 style="font-size: 5vh" class='card-title'>
              <%= quote.content %>
            </h4>
            <% } else { %>
              <h4 style="font-size: 5vh" class='card-title'>
                <%= quote.content %>
              </h4>
              <p class='card-text'> Author: <%= quote.author.name %>
              </p>
              <% } %>
      </div>
    </div>
  </div>

  <%- include('./partials/footer') %>