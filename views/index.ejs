<%- include('./partials/header') %>

<div class='row'>
  <div class='card text-white bg-primary mx-auto col' style='max-width: 50vw; margin-top: 40vh;'>
    <div class='card-body'>
      <% if(!quote) { %>
        <h2>Coming soon...</h2>
      <% } else if(quote.author.name) { %>
        <h4 class='card-title'><%= quote.content %></h4>
        <p class='card-text'> Author: <%= quote.author.name  %></p>
        <% } else { %>
        <h4 class='card-title'><%= quote.content %></h4>
      <% } %>
    </div>
  </div>
 </div>

<%- include('./partials/footer') %>
