<%- include("../partials/header") %>

<% quotes.forEach((quote) => { %>
    <% if(quote.author) { %>
        <section style="background-color:antiquewhite;">
            <h2>"<%= quote.content %>"</h2>
            <h5>Author: <%= quote.author.name %></h5>
            <a href="/quotes/<%= quote._id %>/edit">Edit</a>
        </section>
    <% } else { %>
        <section style="background-color:antiquewhite;">
            <h2>"<%= quote.content %>"</h2>
            <a href="/quotes/<%= quote._id %>/edit">Edit</a>
        </section>
    <% } %>
<% }) %>

<%- include("../partials/footer") %>

