<%- include("../partials/header") %>

<form action="/quotes/<%= quote._id %>?_method=PUT" method="POST">
    <label>Update content:</label>
    <textarea name="content" placeholder="<%= quote.content %>" cols="20" rows="5"></textarea>
    <label>Add Author</label>
    <select name="author">
        <option disabled value="none">Choose an author</option>
        <% authors.forEach((author) => { %>
            <% if(quote.author && author.name && quote.author.name === author.name) { %>
                <option selected disabled value="<%= quote.author._id %>"><%= quote.author.name %></option>
            <% } else { %>
                <option value="<%= author._id %>"><%= author.name %></option>
            <% } %>
        <% }) %>
    </select>
    <button type="submit">Update</button>
</form>
<form action="/quotes/<%= quote._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Quote</button>
</form>

<%- include("../partials/footer") %>

