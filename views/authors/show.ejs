<%- include("../partials/header") %>

<% authors.forEach((author) => { %>
    <% if(author.name !== "Unknown") { %>
        <% if(author.name.includes('a')) %>
        <a style="cursor: pointer;" href="/authors/<%= author.id %>/edit">
            <section>
                <h6><%= author.name %></h6>
                <p><%= author.bio %></p>
                <a href="<%= author.url %>"><%= author.url %></a>
                <% if(author.authoredQuotes) { %>
                    <p>Number of Associated Works: <%= author.authoredQuotes.length %></p>
                <% } %>
            </section>
        </a>

        <ul class="list-group">
            <li class="list-group-item list-group-item-primary d-flex justify-content-between align-items-center">
              <span class="badge bg-primary rounded-pill">3</span>
            </li>
            </li><li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
              <span class="badge bg-primary rounded-pill">5</span>
            </li>
            <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-center">
              <span class="badge bg-primary rounded-pill">4</span>
            </li>
            <li class="list-group-item list-group-item-danger d-flex justify-content-between align-items-center">
              <span class="badge bg-primary rounded-pill">9</span>
            </li>
          </ul>
    <% } %>
<% }) %>


<%- include("../partials/footer") %>
