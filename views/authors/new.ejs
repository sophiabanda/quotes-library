<%- include("../partials/header") %>

<form style="margin-top: 10vh;" action="/authors" method="POST">
    <fieldset>  
        <div>
            <div class="form-floating mb-3">
                <input name="name" type="text" class="form-control" id="floatingInput" placeholder="Name is required">
                <label>Name</label>
              </div>
              <div class="form-floating mb-4">
                <input name="url" type="text" class="form-control" id="floatingPassword" placeholder="URL" autocomplete="off">
                <label>URL</label>
              </div>
              <div class="form mb-4">
                  <label class="form-label mb-3">Add a Bio</label>
                  <textarea name="bio" class="form-control" rows="3"></textarea>
              </div>
              <div>
                  <label>Add Birthdate: </label><br><br>
                  <input style="height: 30px;" name="birthDate" type="date">
              </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        
    </fieldset>
</form>

<%- include("../partials/footer") %>